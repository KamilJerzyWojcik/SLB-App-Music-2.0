@{
    Layout = "_Layout";
}

<main role="main" class="container">


    @if (!(TempData["SearchError"] is null))
    {
        <div class="alert alert-warning">
            @TempData["SearchError"]
        </div>
    }
    else
    {



        <div class="alert alert-success">
            <h6>Results for: </h6>
            <h5>@ViewBag.query</h5>
            <h6 id="added"></h6>
        </div>

        <nav aria-label="...">
            <ul class="pagination pagination-lg"></ul>
        </nav>

        <div class="container marketing">
            <div class="row">

            </div>
        </div>


    }
    <div class="btn-group"></div>
    <div class="row">
        <div class="col-lg-4 col-md-3">
            <div class="row">
                <div class="col-lg-6 col-md-12" id="btn-add"></div>
                <div class="col-lg-6 col-md-12" id="btn-back"></div>

            </div>
        </div>
        <div class="col-lg-4 col-md-8 col-sm-12">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false"></div>
            <div class="col-12" id="tracks-list"></div>
        </div>
        <div class="col-lg-4 col-md-12">
            <div class="row">
                <div class="col-lg-0 col-md-3 col-sm-0"></div>
                <div class="col-lg-12 col-md-8 col-sm-12" id="yt">
                    <script src="~/js/ytApi.js"></script>
                </div>
                <div class="col-lg-0 col-md-1 col-sm-0"></div>

                <div class="col-12" id="videos-list">

                </div>
            </div>
        </div>

    </div>
</main>

<script src="~/js/DiscogsAlbums/Helpers.js"></script>
<script src="~/js/DiscogsAlbums/Albums.js"></script>
<script src="~/js/DiscogsAlbums/SingleAlbum.js"></script>