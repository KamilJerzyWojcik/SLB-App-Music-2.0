@model SLB_REST.ViewModel.LoginViewModel
@{
    Layout = "_Layout";
}
<link href="~/css/account.css" rel="stylesheet" />

<main role="main" class="container text-center">

    <img id="img-logo" src="~/img/SLBblack.png" alt="logo" width="200" height="100" />
    <form class="form-signin" method="post" asp-action="Login" asp-controller="Account">
        <label for="Login" class="sr-only">Login</label>
        <input asp-for="Login" type="text" id="inputLogin" class="form-control" placeholder="Login" required autofocus>
        <label for="Password" class="sr-only">Password</label>
        <input type="password" asp-for="Password" id="inputPasswordLogin" class="form-control" placeholder="Password" required>
        <div class="checkbox mb-3">
            <label for="RememberMe">
                <input asp-for="RememberMe" type="checkbox"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-success btn-block" type="submit">Login</button>
        <a class="btn btn-lg btn-warning btn-block" asp-action="Register" asp-controller="Account">Register</a>
        <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
    </form>
    <div asp-validation-summary="All"></div>
</main>